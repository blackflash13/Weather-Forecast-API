{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": ["warn", { "argsIgnorePattern": "next" }],
        "no-console": "off",
        "no-process-exit": "off",
        "object-curly-spacing": ["error", "always"],
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "indent": ["error", 2],
        "comma-dangle": ["error", "always-multiline"],
        "arrow-parens": ["error", "always"],
        "no-var": "error",
        "prefer-const": "error"
    }
}
